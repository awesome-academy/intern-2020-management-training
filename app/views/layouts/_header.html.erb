<nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top shadow-sm p-3">
  <div class="navbar-brand col-xl-2 text-center">
    <%= image_tag Settings.app.logo, class: "d-inline-block align-top sun-logo" %>
    <span><%= t ".training" %></span>
  </div>

  <% if logged_in? %>
    <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item notifications new d-flex align-items-center" id="notifications">
          <div data-toggle="dropdown" aria-expanded="false" id="dropdownNotify">
            <%= icon "fas", "bell", class: "strong fa-lg" %>
            <sup>
              <span class="counter text-bold">
                <%= t ".example_nofify_count" %>
              </span>
            </sup>
          </div>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownNotify">
            <%= link_to root_path, class: "message-noti dropdown-item" do %>
              <div class="row no-gutters">
                <div class="col-md-2 d-flex align-items-center">
                  <%= image_tag Settings.app.default_avatar, class: "notify-avatar" %>
                </div>
                <div class="col-md-10 notify-body text-justify">
                  <p class="text-wrap notify-content">
                    <%= t ".example_notify_content" %>
                  </p>
                  <p class="card-text">
                    <small class="text-muted">
                      <%= t ".example_notify_updated" %>
                    </small>
                  </p>
                </div>
              </div>
            <% end %>
            <%= link_to root_path, class: "dropdown-item text-center" do %>
              <%= t ".all_notifications"%>
            <% end %>
          </div>
        </li>
        <li class="nav-item dropdown" id="profile">
          <div class="nav-link dropdown-toggle" id="dropdownProfile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= image_tag Settings.app.default_avatar, class: "avatar" %>
            <span><%= current_user.name %></span>
          </div>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownProfile">
            <%= link_to root_path, class: "dropdown-item" do %>
              <%= icon "fas", "user-circle" %>
              <span><%= t ".profile" %></span>
            <% end %>
            <%= link_to root_path, class: "dropdown-item" do %>
              <%= icon "fas", "cog" %>
              <span><%= t ".settings" %></span>
            <% end %>
            <%= link_to logout_path, method: :delete, class: "dropdown-item" do %>
              <%= icon "fas", "sign-out-alt" %>
              <span><%= t ".logout" %></span>
            <% end %>
          </div>
        </li>
      </ul>
    </div>
  <% end %>
</nav>
